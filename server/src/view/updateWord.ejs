<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <title>Admin</title>
</head>

<body>
    <h1>Admin Page</h1>
    <div class="container d-flex justify-content-center">
        <% const idDefs=[] %>
            <% for(let i=0; i < data.length; i++) { %>
                <% idDefs.push(data[i].idDef)%>
                    <% } %>
                        <form class="d-flex w-50 flex-column gap-3"
                            action="/handleUpdateWord/<%= data[0].idWord %>/<%= idDefs %>" method="post">
                            <div class="d-flex flex-md-column">
                                <label class="fw-bold">Word</label>
                                <input type="text" name="word" value="<%= data[0].word%>">
                                <div class="invalid-feedback">Please enter word</div>
                            </div>
                            <div class=" d-flex flex-md-column">
                                <label class="fw-bold">Phonetic</label>
                                <input type="text" name="phonetic" value="<%= data[0].phonetic%>">
                            </div>
                            <div class="d-flex gap-5">
                                <label class="fw-bold">Word Type</label>
                                <div class="d-flex flex-column">
                                    <label>Noun</label>
                                    <% if('noun'===data[0].wordType) { %>
                                        <input type="radio" name="wordType" value="noun" checked>
                                        <% } else { %>
                                            <input type="radio" name="wordType" value="noun">
                                            <% } %>
                                </div>
                                <div class="d-flex flex-column">
                                    <label>Verb</label>
                                    <% if('verb'===data[0].wordType) { %>
                                        <input type="radio" name="wordType" value="verb" checked>
                                        <% } else { %>
                                            <input type="radio" name="wordType" value="verb">
                                            <% } %>
                                </div>
                                <div class="d-flex flex-column">
                                    <label>Adjective</label>
                                    <% if('adjective'===data[0].wordType) { %>
                                        <input type="radio" name="wordType" value="adjective" checked>
                                        <% } else { %>
                                            <input type="radio" name="wordType" value="adjective">
                                            <% } %>
                                </div>
                                <div class="d-flex flex-column">
                                    <label>Adverb</label>
                                    <% if('adverb'===data[0].wordType) { %>
                                        <input type="radio" name="wordType" value="adverb" checked>
                                        <% } else { %>
                                            <input type="radio" name="wordType" value="adverb">
                                            <% } %>
                                </div>
                            </div>
                            <div class="d-flex flex-column gap-3">
                                <div id="def-container" class="d-flex flex-md-column gap-3">
                                    <% if(data.length> 1) { %>
                                        <% for(let i=0; i < data.length; i++) { %>
                                            <label class="fw-bold">Definitions</label>
                                            <input type="text" name="definitions" required
                                                value="<%= data[i].meaning %>">
                                            <label class="fw-bold">Vietnamese</label>
                                            <input type="text" name="vietnamese" required
                                                value=" <%= data[i].vietnamese %> ">
                                            <% } %>
                                                <% } else { %>
                                                    <label class="fw-bold">Definitions</label>
                                                    <input type="text" name="definitions" required
                                                        value="<%= data[0].meaning %>">
                                                    <label class="fw-bold">Vietnamese</label>
                                                    <input type="text" name="vietnamese" required
                                                        value="<%= data[0].vietnamese %>">
                                                    <% } %>
                                </div>
                                <button class="w-25" id="add-btn">Add Definitions</button>
                            </div>
                            <button type="submit">Update Word</button>
                        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
    <script src="/javascript/addBtnEvent.js"></script>
</body>

</html>